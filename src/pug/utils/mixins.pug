//- List

mixin list(items, className, active)
	ul(class=className)
		each item, index in items
			li(class=classname + '__item')
				if index === active
					span(class=className + '__active')=item
				else
					a(class=className + '__link')=item


//- SVG-icons

mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="assets/img/svg/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="assets/img/svg/symbol/sprite.svg#" + name)
