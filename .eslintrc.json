{
  "overrides": [
    {
      "files": [ "src/assets/**/*.js" ],
      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "indent": [
          "error",
          4
        ],
        "semi": [
          "error",
          "never"
        ],
        "quotes": [
          "error",
          "backtick"
        ]
      }
    }
  ]
}
